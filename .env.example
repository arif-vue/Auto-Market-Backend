# ================================
# AUTO-MARKET ENVIRONMENT CONFIGURATION
# ================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ================================
# DJANGO CORE SETTINGS  
# ================================
DEBUG=True
ENVIRONMENT=development
# Generate a new secret key: python -c \"from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())\"
SECRET_KEY=your-super-secret-django-key-here-generate-a-new-one

# Network Configuration - Add your domain/IP addresses
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ================================
# AI PRICING SERVICE
# ================================
# OpenAI API for intelligent product pricing
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ================================
# EMAIL CONFIGURATION
# ================================
# Resend Email Service (Recommended)
# Sign up at: https://resend.com
RESEND_API_KEY=re_your-resend-api-key-here
DEFAULT_FROM_EMAIL=your-email@yourdomain.com

# Alternative: Traditional SMTP (if not using Resend)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ================================
# EBAY MARKETPLACE INTEGRATION
# ================================
# Get eBay API credentials from: https://developer.ebay.com/
# Create an app and get your Client ID, Secret, and Dev ID

EBAY_CLIENT_ID=your-ebay-client-id
EBAY_CLIENT_SECRET=your-ebay-client-secret
EBAY_DEV_ID=your-ebay-developer-id
EBAY_APP_NAME=your-app-name

# Environment Settings
EBAY_SANDBOX=True
EBAY_ENVIRONMENT=sandbox
# Change to production when ready:
# EBAY_SANDBOX=False
# EBAY_ENVIRONMENT=production

# OAuth Redirect URI - Update with your domain
EBAY_REDIRECT_URI=http://localhost:8000/api/ebay/callback/
EBAY_RU_NAME=your-runame-from-ebay

# Business Policies (Set up in eBay Seller Hub)
EBAY_FULFILLMENT_POLICY_ID=your-fulfillment-policy-id
EBAY_PAYMENT_POLICY_ID=your-payment-policy-id
EBAY_RETURN_POLICY_ID=your-return-policy-id

# User Token (Generated after OAuth flow)
# Leave empty initially - will be populated after authentication
EBAY_USER_TOKEN=

# ================================
# AMAZON MARKETPLACE INTEGRATION
# ================================
# Amazon SP-API Setup Guide: https://developer-docs.amazon.com/sp-api/
# 1. Register as Amazon seller
# 2. Create SP-API application
# 3. Get LWA credentials
# 4. Set up IAM role for API access

# LWA (Login with Amazon) Credentials
AMAZON_CLIENT_ID=amzn1.application-oa2-client.your-client-id
AMAZON_CLIENT_SECRET=amzn1.oa2-cs.v1.your-client-secret
AMAZON_APP_NAME=Your App Name
AMAZON_SP_API_APP_ID=amzn1.sp.solution.your-app-id

# AWS IAM Credentials for SP-API Authentication
# Create IAM user with SP-API permissions
AWS_ACCESS_KEY_ID=AKIA-your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AMAZON_AWS_ACCESS_KEY_ID=AKIA-your-aws-access-key
AMAZON_AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AMAZON_REGION=us-east-1

# Environment
AMAZON_SANDBOX=True
# Change to False for production

# Seller Information (From Seller Central)
AMAZON_SELLER_ID=your-seller-id
AMAZON_MARKETPLACE_ID=ATVPDKIKX0DER
# Get refresh token after OAuth flow
AMAZON_REFRESH_TOKEN=
# IAM Role ARN for SP-API access
AMAZON_ROLE_ARN=arn:aws:iam::your-account:role/SPAPIAccessRole

# ================================
# CORS & FRONTEND SETTINGS
# ================================
# Add your frontend URLs here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# Media file settings
MEDIA_URL=/media/
MEDIA_ROOT=media/

# ================================
# DATABASE CONFIGURATION
# ================================
# Default: SQLite (for development)
# For production, use PostgreSQL or MySQL

# PostgreSQL (Recommended for production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=automarket_db
# DB_USER=automarket_user
# DB_PASSWORD=your-secure-password
# DB_HOST=localhost
# DB_PORT=5432

# MySQL Alternative
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=automarket_db
# DB_USER=automarket_user
# DB_PASSWORD=your-secure-password
# DB_HOST=localhost
# DB_PORT=3306

# ================================
# CACHING (Optional - for production)
# ================================
# Redis for caching and sessions
# REDIS_URL=redis://localhost:6379/1
# CACHE_BACKEND=django_redis.cache.RedisCache

# ================================
# LOGGING & MONITORING
# ================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry for error monitoring (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# SECURITY SETTINGS (Production)
# ================================
# Uncomment and configure for production deployment

# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# ================================
# CUSTOM BUSINESS SETTINGS
# ================================
# Your business information
BUSINESS_NAME=Your Business Name
BUSINESS_EMAIL=business@yourdomain.com
BUSINESS_PHONE=+1-555-123-4567
BUSINESS_ADDRESS=Your Business Address

# Default pricing settings
DEFAULT_MARKUP_PERCENTAGE=0.15
MINIMUM_PRODUCT_PRICE=5.00
MAXIMUM_PRODUCT_PRICE=50000.00

# ================================
# DEVELOPMENT TOOLS
# ================================
# Django Debug Toolbar (Development only)
# ENABLE_DEBUG_TOOLBAR=True

# Django Extensions
# ENABLE_DJANGO_EXTENSIONS=True

# ================================
# QUICK SETUP CHECKLIST
# ================================
# □ 1. Copy .env.example to .env
# □ 2. Generate new SECRET_KEY
# □ 3. Set up OpenAI API key
# □ 4. Configure email service (Resend recommended)
# □ 5. Register eBay developer account
# □ 6. Set up Amazon Seller Central & SP-API
# □ 7. Configure AWS IAM for Amazon integration
# □ 8. Update ALLOWED_HOSTS with your domain
# □ 9. Set up database (PostgreSQL for production)
# □ 10. Test marketplace connections

